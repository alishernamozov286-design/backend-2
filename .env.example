# Server Configuration
NODE_ENV=production
PORT=10000

# MongoDB Atlas connection string (production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=AppName

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get chat ID by messaging your bot and checking updates
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# SMS API Configuration (Eskiz.uz)
# Register at https://eskiz.uz and get credentials
ESKIZ_EMAIL=your_eskiz_email@example.com
ESKIZ_PASSWORD=your_eskiz_password

# JWT Secret key for authentication
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Optional: Additional Configuration
# CORS_ORIGIN=http://localhost:3000
# LOG_LEVEL=info